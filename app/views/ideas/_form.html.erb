
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
              <%= render "shared/errors", obj: @idea %>
            <%= form_with(model: @idea, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
            <div class="form-group row">
                    <%= form.label :title, class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Idea title" %>
                        </div>
                    </div>
                        <div class="form-group row">
                        <%= form.label :description, class: "col-2 col-form-label text-light" %>
                            <div class="col-10">
                                <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "What's your big idea?" %>
                            </div>
                        </div>
                    <div> 
                </div> 
                <div class="form-group row justify-content-center">
                <%= form.submit class: "btn btn-outline-light btn-lg" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

