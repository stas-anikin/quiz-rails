<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
     
     <div class="form-group row">
          <%= f.label :first_name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :first_name, class: "form-control shadow rounded", placeholder: "Enter your first name", :required => true %>
          </div>
        </div>
     <div class="form-group row">
          <%= f.label :last_name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :last_name, class: "form-control shadow rounded", placeholder: "Enter your last name", :required => true %>
          </div>
        </div>


        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address", :required => true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter a password", :required => true %>
          </div>
        </div>

     <div class="form-group row">
          <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.password_field :password_confirmation, class: "form-control shadow rounded", placeholder: "Confirm your password", :required => true %>
          </div>
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to "[ Cancel and return to ideas index ]", ideas_path, class: "text-info" %>
    </div>
  </div>
</div>